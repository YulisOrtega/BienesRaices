extends ../layout/index
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block content
    .py-1 
        h2.text-center.text-2xl.font-extrabold= page 
        .bg-vividSky.shadow.py-8.py-4.rounded.mx-auto.max-w-4xl.my-10(class="md:px-10")
            form.space-y-8(action="property/create" method="post")
                .space-y-8 
                    h3.text-lg.leading-6.font-md.text-black.uppercase.font-bold Generate Information of Property
                    p.text-gray Please carefully type the specific information of the property that you want to sell. 
                    div
                            label(for="title").block.text-sm.uppercase.text-black.mb-3.font-bold Title of a announcement 
                            //input(type="") 
                            select#category.w-full.px-3.py-2.border.border-rosyBrown.rounded
                    div(class="md:w-1/2")
                            label(for="category").block.text-sm.uppercase.text-black.mb-3.font-bold Title of a announcement  
                            select#category.w-full.px-3.py-2.border.border-rosyBrown.rounded
                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/2")
                            label(for="category").block.text-sm.uppercase.text-black.mb-3.font-bold Title of a announcement  
                            select#category.w-full.px-3.py-2.border.border-rosyBrown.rounded
                                option(value="" selected disabled) -- SELECT CATEGORY -- 
                                option(value="") Apartament 
                                option(value="") House 
                                option(value="") Landfield
                                option(value="") Local
                                option(value="") Warehouse
                        div(class="md:w-1/2") 
                            label(for="priceRange").block.text-sm.uppercase.text-black.mb-3.font-bold Price Range  
                            select#priceRange.w-full.px-3.py-2.border.border-rosyBrown.rounded
                                option(value="" selected disabled) -- SELECT PRICE -- 
                                option(value="") $10,000 - $50,000 
                                option(value="") $51,000 - $100,000  
                                option(value="") $101,000 - $200,000
                                option(value="") $201-000 - $500,000
                                option(value="") &gt; $501,000
                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/3")
                            label(for="nRooms").block.text-sm.uppercase.text-black.mb-3.font-bold Number of rooms  
                            select#nRooms.w-full.px-3.py-2.border.border-rosyBrown.rounded
                                option(value="" selected disabled) -- SELECT # ROOMS -- 
                                - let n=1;
                                    while n<=10
                                        option(value=n) #{n++} 
                        div(class="md:w-1/3") 
                            label(for="nWC").block.text-sm.uppercase.text-black.mb-3.font-bold Number of WC  
                            select#nWC.w-full.px-3.py-2.border.border-rosyBrown.rounded 
                                option(value="" selected disabled) -- SELECT # WC -- 
                                - let m=1;
                                    while m<=5
                                        option(value=m) #{m++} 
                        div(class="md:w-1/3") 
                            label(for="pLot").block.text-sm.uppercase.text-black.mb-3.font-bold Number of Parking
                            select#pLot.w-full.px-3.py-2.border.border-rosyBrown.rounded
                                option(value="" selected disabled) -- SELECT # PARKING LOTS -- 
                                - let o=1;
                                    while o<=3
                                        option(value=o) #{o++}
                    .border-gray.border-t.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación 
                    p.text-gray-600 Ubica la propiedad en el mapa 
                    #map.h-96.mt-10 
                    div
                    input(type="hidden" name="street" id="street" value=data.street?data.street:'')
                    input(type="hidden" name="lat" id="lat" value=data.lat?data.lat:'')
                    input(type="hidden" name="lng" id="lng" value=data.lng?data.lng:'')
                    p.street=data.street?data.street:''
                    input(class="w-full py-3 bg-darkCian hover:bg-coolGray rounded text-black font-bold uppercase cursor-pointer" type="submit" value="Añadir imagen")
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    scrip(src="/js/map.js")

                        
                            
    